@model IEnumerable<RunningAdvisor.Models.Entities.BeginnerRunningData>

@{
    ViewData["Title"] = "Beginner Running Records";
}

<h2>Beginner Running Records</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create Data</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Time 3k</th>
            <th>Avg Heart Rate 3k</th>
            <th>Time 5k</th>
            <th>Avg Heart Rate 5k</th>
            <th>Time 10k</th>
            <th>Avg Heart Rate 10k</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Time3k</td>
                <td>@item.AvgHeartRate3k</td>
                <td>@item.Time5k</td>
                <td>@item.AvgHeartRate5k</td>
                <td>@item.Time10k</td>
                <td>@item.AvgHeartRate10k</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a asp-action="GeneratePlan" asp-route-id="@item.Id" class="btn btn-secondary">Generate Training Plan</a>
                </td>
            </tr>
        }
    </tbody>
</table>
